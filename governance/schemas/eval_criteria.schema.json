{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/governed-ai-delivery/governance/schemas/eval_criteria.schema.json",
  "title": "Eval Criteria Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "mode"],
  "properties": {
    "version": {
      "type": "integer",
      "description": "Schema version for the eval_criteria.yaml instance.",
      "minimum": 1
    },
    "mode": {
      "type": "string",
      "description": "Controls whether CI runs LLM evals, deterministic checks, or skips eval execution.",
      "enum": ["llm", "deterministic", "none"]
    },
    "rationale": {
      "type": "string",
      "description": "Required when mode is none. Explains why evaluation execution is not applicable."
    },
    "owner": {
      "type": "string",
      "description": "Optional. Team or role responsible for keeping criteria accurate."
    },

    "unit_tests": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enforce_FIRST", "minimum_FIRST_average"],
      "properties": {
        "enforce_FIRST": { "type": "boolean" },
        "minimum_FIRST_average": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        }
      }
    },

    "code_quality": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enforce_virtues", "minimum_virtue_average"],
      "properties": {
        "enforce_virtues": { "type": "boolean" },
        "minimum_virtue_average": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        }
      }
    },

    "llm_evaluation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["criteria"],
      "properties": {
        "criteria": {
          "type": "array",
          "items": { "$ref": "#/$defs/criterion" }
        },
        "dataset": {
          "type": "string",
          "description": "Path or identifier for the eval dataset/prompt set."
        },
        "fail_on_regression": {
          "type": "boolean",
          "default": true
        }
      }
    },

    "criteria": {
      "type": "array",
      "description": "Legacy: prefer llm_evaluation.criteria. Retained for compatibility.",
      "items": { "$ref": "#/$defs/criterion" }
    }
  },

  "allOf": [
    {
      "if": {
        "properties": { "mode": { "const": "none" } },
        "required": ["mode"]
      },
      "then": {
        "required": ["rationale"],
        "properties": {
          "criteria": { "maxItems": 0 },
          "llm_evaluation": false
        }
      }
    },
    {
      "if": {
        "properties": { "mode": { "const": "llm" } },
        "required": ["mode"]
      },
      "then": {
        "required": ["unit_tests", "code_quality", "llm_evaluation"]
      }
    },
    {
      "if": {
        "properties": { "mode": { "const": "deterministic" } },
        "required": ["mode"]
      },
      "then": {
        "required": ["unit_tests", "code_quality"]
      }
    }
  ],

  "$defs": {
    "criterion": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "eval_class", "threshold", "fail_on"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "input": { "type": "string" },
        "expected_behavior": { "type": "string" },
        "eval_class": { "type": "string", "minLength": 1 },
        "threshold": { "type": "number", "minimum": 0, "maximum": 1 },
        "fail_on": {
          "type": "string",
          "enum": ["below_threshold", "above_threshold", "error", "missing_signal"]
        },
        "weight": { "type": "number", "minimum": 0 },
        "tags": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "string" }
      }
    }
  }
}